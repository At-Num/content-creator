<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<CheckBox id="autoPresentationCheckBox" text="display.settings.auto.presentation">
		<gridbagconstraints gridx="0" gridy="0" gridwidth="2" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
	</CheckBox>
	<Label text="display.settings.background.color">
		<gridbagconstraints gridx="0" gridy="1" anchor="GridBagConstraints.WEST" insets="5,0,5,0" />
	</Label>
	<ColorChooserButton id="colorChooserButton" preferredSize="20,20">
		<gridbagconstraints gridx="1" gridy="1" anchor="GridBagConstraints.WEST" insets="5,5,5,5" />
	</ColorChooserButton>
	<TitledSeparator text="display.settings.connected.displays">
		<gridbagconstraints gridx="0" gridy="2" gridwidth="2" anchor="GridBagConstraints.WEST" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="15,0,5,0" />
	</TitledSeparator>
	<VBox id="displayContainer" spacing="5">
		<gridbagconstraints gridx="0" gridy="3" anchor="GridBagConstraints.NORTHWEST" insets="5,0,5,0" />
	</VBox>
	<DisplayPanel id="displayPanel">
		<gridbagconstraints gridx="1" gridy="3" anchor="GridBagConstraints.NORTHWEST" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH" insets="5,5,5,5" />
	</DisplayPanel>
	<box.vglue>
		<gridbagconstraints gridx="0" gridy="4" weighty="1.0" />
	</box.vglue>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="5" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>