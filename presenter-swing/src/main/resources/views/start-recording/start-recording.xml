<?xml version="1.0" encoding="UTF-8"?>
<VBox layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)"  >
	<gridbagconstraints fill="GridBagConstraints.BOTH" anchor="GridBagConstraints.WEST"  />
				<Label text="File Name">
					<gridbagconstraints id="gbc_vid_name_label" gridx="0" gridy="0" insets="0,5,0,5" anchor="GridBagConstraints.WEST"  />
				</Label>
				<TextField id="nameTextField"  >
					<gridbagconstraints gridx="1" gridy="0" insets="0,5,0,5"  weightx="1.0" gridwidth ="2"
										anchor="GridBagConstraints.WEST"  fill="GridBagConstraints.HORIZONTAL" />
				</TextField>
				<Label text="start.recording.microphone">
					<gridbagconstraints id="gbc_audio" gridx="0" gridy="1" insets="15,5,0,5" anchor="GridBagConstraints.WEST" />
				</Label>
				<ComboBox id="audioCaptureDevicesCombo">
					<gridbagconstraints gridx="1" gridy="1" weightx="1.0" gridwidth ="2"
										anchor="GridBagConstraints.WEST"  fill="GridBagConstraints.HORIZONTAL" insets="15,5,0,5"/>
					<renderer class="atnum.content.swing.combobox.DefaultStringRenderer" />
				</ComboBox>
	<HBox>
		<gridbagconstraints gridx="0" gridy="2" insets="20,0,0,0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="startButton" text="start.recording.start" />
		<box.hstrut width="5" />
		<Button id="closeButton" text="button.close" />
	</HBox>
</VBox>