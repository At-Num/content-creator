<?xml version="1.0" encoding="UTF-8"?>
<VBox layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)"  preferredSize="500,200" maximumSize="500,200" >

				<Label text="File Name">
					<gridbagconstraints id="gbc_vid_name_label" gridwidth = "1" gridx="0" gridy="0"  weightx="0" insets="0,5,0,5" anchor="GridBagConstraints.WEST"  />
				</Label>
				<TextField id="nameTextField"  >
					<gridbagconstraints gridx="1" gridy="0" gridwidth = "4" insets="0,5,0,5"  weightx="1.0"  fill="GridBagConstraints.HORIZONTAL" />
				</TextField>
				<Label text="start.recording.microphone">
					<gridbagconstraints id="gbc_audio"  gridwidth = "1"  gridx="0" gridy="1" insets="15,5,0,5" weightx="0" anchor="GridBagConstraints.WEST" />
				</Label>
				<ComboBox id="audioCaptureDevicesCombo">
					<gridbagconstraints gridx="1" gridy="1" weightx="1.0" gridwidth = "4" fill="GridBagConstraints.HORIZONTAL" insets="15,5,0,5"/>
					<renderer class="atnum.content.swing.combobox.DefaultStringRenderer" />
				</ComboBox>
	<HBox>
		<gridbagconstraints gridx="0" gridy="2"  gridwidth = "5"  insets="20,0,0,0" weightx="1.0" anchor="GridBagConstraints.EAST" fill="GridBagConstraints.HORIZONTAL" />
		<box.hglue />
		<Button id="startButton" text="start.recording.start" />
		<box.hstrut width="5" />
		<Button id="closeButton" text="button.close" />
	</HBox>
</VBox>