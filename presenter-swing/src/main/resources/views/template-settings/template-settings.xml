<?xml version="1.0" encoding="UTF-8"?>
<Panel layout="GridBagLayout" border="EmptyBorder(20, 20, 20, 20)">
	<ScrollPane border="EmptyBorder(0, 0, 0, 0)">
		<gridbagconstraints gridx="0" gridy="0" gridwidth="2" fill="GridBagConstraints.BOTH" anchor="GridBagConstraints.WEST" weightx="1.0" weighty="1.0" insets="0,0,0,0" />

		<Panel id="container">
			<VBox gap="5" border="EmptyBorder(0, 0, 10, 10)">
				<TitledSeparator text="template.settings.whiteboard" />
				<DocumentPreview id="whiteboardPreview" preferredSize="320, 240" />
			</VBox>
			<VBox gap="5" border="EmptyBorder(0, 0, 10, 10)">
				<TitledSeparator text="template.settings.quiz" />
				<DocumentPreview id="quizPreview" preferredSize="320, 240" />
			</VBox>
			<VBox gap="5" border="EmptyBorder(0, 0, 10, 10)">
				<TitledSeparator text="template.settings.chat.message" />
				<DocumentPreview id="chatMessagePreview" preferredSize="320, 240" />
			</VBox>
			<VBox gap="5" border="EmptyBorder(0, 0, 10, 10)">
				<TitledSeparator text="template.settings.hall.message" />
				<DocumentPreview id="hallMessagePreview" preferredSize="320, 240" />
			</VBox>
		</Panel>
	</ScrollPane>
	<HBox gap="5">
		<gridbagconstraints gridx="0" gridy="2" gridwidth="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="10,0,0,0" />
		<box.hglue />
		<Button id="resetButton" text="button.reset"/>
		<Button id="closeButton" text="button.close"/>
	</HBox>
</Panel>